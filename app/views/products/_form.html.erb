<%= simple_form_for @product, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>
  <%= f.input :description, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>
  <%= f.input :stock, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>

  <%= f.input :reference, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>

  <%= f.input :type_product_id, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>

  <%= f.input :user_id, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>

  <%= f.input :quantity, autocomplete: "off", class: "form-control", :label => "Cantidad:", :required => true,  :input_html => {  :id => "txt1" } %>
  <%= f.input :unit_price, autocomplete: "off", class: "form-control", :label => "Precio:", :required => true,  :input_html => {  :id => "txt2"} %>
  <%= f.input :state_product, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>
  
  <%= f.input :total, autocomplete: "off", class: "form-control", :label => "Total:", :required => true,  :input_html => {  :id => "txt3"}, :disabled => true %>
  <%= f.input :new_used, autocomplete: "off", class: "form-control", :label => "Confirma tu contraseña:", :required => true %>
        <%= f.file_field :avatar, class: "help-block" %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
<% end %>
