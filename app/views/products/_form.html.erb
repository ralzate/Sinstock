                                                  prompt:       '-- Seleccionar --',
                                                  collection: @product.select_new_used.sort,
                                                  error: false, label: false, 
                                                  input_html:   {class: 'form-control'} %>
                                        </div>
                                    </div>
                                </div>
                                                                
                                <div class="col-md-6">
                                    <div class="input-container">
                                        <div class="input-group">
                                            <span class="input-group-addon">Tipo Producto:</span>
                                            <%= f.collection_select :type_product_id, TypeProduct.all, :id, :name, { prompt: "Por favor selecciona uno", :selected => params[:search], hide_label: :true }, class: "input-sm" %> 
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <br/>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="input-container">
                                        <div class="input-group">
                                            <span class="input-group-addon">Precio Unitario:</span>
                                            <%= f.number_field :unit_price, class: "form-control valid", id: 'txt2' %>
                                        </div>
                                    </div>
                                </div>


