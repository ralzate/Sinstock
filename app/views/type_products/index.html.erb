<!--Version para navegadores de escritorio-->
<div class="oculto-en-moviles">
  <h1 class="title">Listado de Tipos Productos</h1>
  <%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
  Buscar:
  <%= text_field_tag :search, params[:search], :placeholder => "Buscador Tipos Productos" %>
  <%= submit_tag "Consultar", :name => nil %>
  <% end %>
  <% end %>
  <br />

    <div class="panel-body">
    </div>
    <table class="table table-hover" id="task-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
      </tr>
    </thead>
    <tbody>
      <%= render @type_products %>
    </tbody>
  </table>
  <%= link_to image_tag('Options/new.png'),  new_type_product_path,  :remote => true, :rel => "tooltip", :title => "Ingresar nueva Profesión", :class => "btn btn-link boton-oculto-moviles " %>

</div>
<br />
<br />
<div align="center">
  <%= will_paginate @type_products, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>
<div align="center">
  Total type_products : <%= @type_products.total_entries %>
</div>