<div class="show">
<%- model_class = Rol -%>
<button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
<div class="page-header">
  <h3 align="center">Datos de <%= @rol.name %></h3>
  <table class="table table-bordered table-hover" >
    <thead>
      <tr class="active">
        <th>Nombre</th>
        <th>Descripcion</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><p><%= truncate(@rol.name, :length => 20) %></p></td>
        <td><p><%= truncate(@rol.description, :length => 20)  %></p></td>
      </tr>
    </tbody>
  </table>
  <div class="modal-footer">
    <a href="#" class="btn btn-primary" onclick="$.lazybox.close()">Cerrar</a>
  </div>
</div>
</div>