<%= simple_form_for(@rol, :html => { :multipart => true, :remote => true }) do |f| %>

    <div class="user">
      <div class="modal-header">
        <h4 class="modal-title"><h3>Datos para los Productos</h3></h4>
      </div><br>
        <div class="row">
            <div class="col-md-6">
                <div class="col-sm-10">
                    <%= f.label :Nombre %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
            </div>
            <div class="col-md-6">
                <div class="col-sm-10">
                    <%= f.label :Descripcion %>
                    <%= f.text_field :description, class: "form-control" %>
                </div>
            </div>
        </div>
      </div>
<br/>
    <%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <a href="#" class="btn btn-default" onclick="$.lazybox.close()">Cerrar</a>
<% end %>
