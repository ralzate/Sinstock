<%= simple_form_for(@manage_user) do |f| %>
  <%= f.error_notification %>


  <div class="row">
    <div class="col-md-4">
      Usuarios:
    </div>
    <div class="form-group">

    <div class="col-md-6" >
            <%= f.collection_select :rol_id, Rol.all, :id, :name, { prompt: "Por favor selecciona un Rol", :selected => params[:search], hide_label: :true }, class: "input-sm" %> 

    </div>
    </div>
    <br/><div class="col-md-4">
      Roles:
    </div>
    <div class="col-md-6">
            <%= f.collection_select :user_id, User.all, :id, :first_name, { prompt: "Por favor selecciona un Usuario", :selected => params[:search], hide_label: :true }, class: "input-sm" %> 
    </div>
    <br/><br/>
  </div>


  <div class="form-actions">
    <%= f.submit "Guardar", :class => 'btn btn-primary' %>
  </div>
<% end %>

</div>


