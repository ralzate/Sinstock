<div class="oculto-en-moviles">

<%= simple_form_for(@manage_user, :html => { :multipart => true, :remote => true }) do |f| %>

<div class="user">
  <div class="modal-header">
    <h4 class="modal-title"><h3>Datos Administracion Usuarios</h3></h4>
  </div><br>

  <div class="row">
    <div class="col-md-4">
      Usuarios:
    </div>
    <div class="form-group">

    <div class="col-md-6" >
            <%= f.collection_select :rol_id, Rol.all, :id, :name, { prompt: "Por favor selecciona un Rol", :selected => params[:search], hide_label: :true }, class: "input-sm" %> 

    </div>
    </div>
    <br/><br/>
    <div class="col-md-4">
      Roles:
    </div>
    <div class="col-md-6">
            <%= f.collection_select :user_id, User.all, :id, :first_name, { prompt: "Por favor selecciona un Usuario", :selected => params[:search], hide_label: :true }, class: "input-sm" %> 
    </div>
    <br/><br/>
  </div>

</div>
<div class="modal-footer">
  <%= f.submit "Guardar", :class => 'btn btn-primary' %>
  <a href="#" class="btn btn-default" onclick="$.lazybox.close()">Cerrar</a>
</div>

<% end %>
</div>

