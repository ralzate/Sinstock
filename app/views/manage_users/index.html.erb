<!--Version para navegadores Moviles-->
<div class="oculto-en-escritorio">
  <%- model_class = ManageUser -%>
  <%= javascript_include_tag "buscador" %>
  <div class="page-header">
    <h1 class="title">Administración Usuarios</h1>
  </div>
  <input type="text" class="form-control" id="dev-table-filter" data-action="filter" data-filters="#dev-table" placeholder="Buscador" />
  <br/>

  <table class="table table-striped" id="dev-table">
    <thead>
      <tr>
        <th>#</th>
        <th>Usuario</th>
        <th>Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @manage_users.each do |manage_user| %>
        <tr>
          <td><%= link_to manage_user.id, manage_user_path(manage_user) %></td>
          <td><%= manage_user.user.first_name %></td>
          <td><%= manage_user.rol.name %></td>
          <td class="actions">
            <%= link_to image_tag('Options/show.png', :border => 0, :alt => 'Mostrar', :title => 'Mostrar'), manage_user_path(manage_user) %>
            <%= link_to image_tag('Options/edit.png', :border => 0, :alt => 'Mostrar', :title => 'Editar'), edit_manage_user_path(manage_user), :class => 'btn btn-link' %>
            <%= link_to image_tag('Options/delete.png', :border => 0, :alt => 'Mostrar', :title => 'Mostrar'), manage_user_path(manage_user),
            :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Estas seguro que deseas eliminar el registro?')) },
            :class => 'btn btn-link delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to image_tag('Options/new.png'), new_manage_user_path, 
  :class => 'btn btn-link' %>
</div>

